<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><img src="<%= cl_image_path @appointment.coach.user.photo.key, gravity: :face,  crop: :fill %>" class="avatar-bordered"></div>
    <div class="col">
      <h1>Checkout summary</h1>
      <p>Booking a lesson with <strong><%= @appointment.coach.user.first_name %></strong> for <strong><%= humanized_money_with_symbol @appointment.amount %></strong></p>
      <button id="pay" class="btn btn__lemon-generic">Pay Now</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @appointment.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
