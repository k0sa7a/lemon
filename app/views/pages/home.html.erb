<div class="home-video-wrapper">
  <div id="main_video">
    <%= video_tag "banner_video.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video" %>
  </div>
  <div class="d-flex flex-column justify-content-center" id="in_video_wrap">
    <h1 class="home">BRINGING SKATERS TOGETHER</h1>
    <div class="arrow">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <%= link_to "Start Exploring", locations_path, class:"call_to_action" %>
  </div>
</div>
<div class="container mt-0">
  <h2 class="text-center mt-0" id="h2__black">
    HELPING SKATERS TO ROLL
  </h2>
  <%= link_to locations_path, class: "cards__link" do %>
  <div class="row mb-4">
    <div class="card col-sm">
      <%= image_tag "coach.svg", :class => "card__img"%>
      <h3>Get Started</h3>
      <h4>We connect you to the best skating teachers in town</h4>
    </div>
    <div class="card col-sm">
      <%= image_tag "community.svg", :class => "card__img"%>
      <h3>Make friends</h3>
      <h4>Join a community of like-minded people that love to skate</h4>
    </div>
    <div class="card col-sm">
      <%= image_tag "route.svg", :class => "card__img"%>
      <h3>Create routes</h3>
      <h4>Create your own skating experience across the town</h4>
    </div>
  </div>
  <% end %>
</div>
<div class="container">
  <h2 class="text-center" id="h2__black">
    SHOP FROM OUR PARTNERS
  </h2>
  <div class="card-group mb-4">
    <div class="card align-items-middle">
      <%= image_tag "Dc_shoes_logo.png", :class => "brand__img"%>
    </div>
    <div class="card align-items-middle">
      <%= image_tag "Santa-Cruz-logo.jpg", :class => "brand__img"%>
    </div>
    <div class="card align-items-middle">
      <%= image_tag "element.png", :class => "brand__img"%>
    </div>
    <div class="card align-items-middle">
      <%= image_tag "vans.png", :class => "brand__img"%>
    </div>
  </div>
</div>
<div class="container m-8">
