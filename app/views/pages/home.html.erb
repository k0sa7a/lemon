<div class="home-video-wrapper">
  <div id="main_video">
    <%= video_tag "banner_video.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video" %>
  </div>
  <div class="d-flex flex-column justify-content-center" id="in_video_wrap">
    <h1 class="home">BRINGING SKATERS TOGETHER</h1>
    <%# <h2 class="call_to_action">Start exploring</h1> %>
    <%= link_to "Start Exploring", locations_path, class:"call_to_action" %>
  </div>
</div>
<div class="container">
  <h2 class="text-center" id="h2__black">
    HELPING SKATERS TO ROLL
  </h2>
  <div class="row">
    <div class="card col-sm">
      <%= image_tag "coach.svg"%>
      <h3>Getting Started</h3>
      <p>We connect you to the best skating teachers in town</p>
    </div>
    <div class="card col-sm">
      <%= image_tag "community.svg"%>
      <h3>Make friends</h3>
      <p>Join a community of like-minded people that loves to skate</p>
    </div>
    <div class="card col-sm">
      <%= image_tag "route.svg"%>
      <h3>Create routes</h3>
      <p>Use our ultimate routing solution to create your own skating experience across the town</p>
    </div>
  </div>
</div>
