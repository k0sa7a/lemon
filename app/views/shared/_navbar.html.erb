<div class="navbar navbar-expand-sm navbar-nothome" data-controller= "navbar-scroller" data-action="scroll@window->navbar-scroller#scroller" data-navbar-scroller-target="nav" >
  <div class="container-fluid" >
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "lemon_logo.png", class: "lemon_logo" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto" >
        <% if user_signed_in? %>
          <div class="d-flex justify-content-end nav-item" data-action="scroll@window->navbar-scroller#scroller" data-navbar-scroller-target="link">
            <div>
              <li class="nav-item nav-item-weather">
                <!-- <%= link_to "Weather", "#", class: "nav-link" %> -->
                <!-- We can move the weather to the footer too or transform it to a link that brings us to weather page or modal that pops up with more details -->
                <%= image_tag @weather_icon, class: "avatar"  %>
                <p class="p__weather"><%= "#{@temp}Â°C" %></p>
              </li>
            </div>
            <div>
              <li class="nav-item active" >
                <%= link_to "Home", "#", class: "nav-link" %>
              </li>
            </div>
            <li class="nav-item dropdown">
              <a class="dropdown-toggle nav-link" data-bs-toggle="dropdown">My Routes</a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <% unless current_user.itineraries.empty? %>
                  <% current_user.itineraries.each do |itinerary| %>
                    <%= link_to "#{itinerary.title}", itinerary_path(itinerary), class: "dropdown-item" %>
                  <% end %>
                <% else %>
                  <p>You have no routes saved</p>
                <% end %>
              </div>
            </li>
            <div>
              <li class="nav-item">
                <%= link_to "Messages", "#", class: "nav-link" %>
              </li>
            </div>
          </div>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item" data-action="scroll@window->navbar-scroller#scroller" data-navbar-scroller-target="link">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
