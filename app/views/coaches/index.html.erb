<h1>COACHES INDEX</h1>

<div data-controller="coaches-search">
  <div class="search-form">
   <%= form_with url: coaches_path, method: :get, class: "d-flex", data: {coaches_search_target: 'form'} do |form| %>
     <div>
       <%= form.text_field :query, value: params[:query], placeholder: "Coaches search", data: {coaches_search_target: 'input'} %>
     </div>
      <%= form.submit "Search" %>
   <% end %>
  </div>
  <div data-coaches-search-target="list">
    <% @coaches.each do |coach| %>
      <p>Name: <%= coach.user.first_name %></p>
      <p>Style: <%= coach.style  %></p>
      <p>Bio: <%= coach.bio  %></p>
   <% end %>
  </div>
</div>
