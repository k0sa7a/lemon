<style>
    body {
      margin: 0;
      padding: 0;
    }

    #map {
      position: absolute;
      top: 0;
      bottom: 0;
      width: 100%;
    }

    .info-box {
  position: absolute;
  margin: 20px;
  width: 25%;
  top: 0;
  bottom: 20px;
  padding: 20px;
  background-color: #fff;
  overflow-y: scroll;
}

.truck {
  width: 20px;
  height: 20px;
  border: 2px solid #fff;
  border-radius: 50%;
  background: #3887be;
  pointer-events: none;
}
  </style>

<div class="d-flex justify-content-between mx-0">
  <div class="list-items-container">
    <h1><%= @itinerary.title %></h1>
    <% @itinerary.list_items.each do |item| %>
      <p><%= item.location.title %></p>
    <% end %>
    <%= link_to "Add more skate spots", locations_path  %>
  </div>
  <div class="map-container" >
    <div style="width: 100%; height: 100%;"
      data-controller="mapbox-optimization"
      data-mapbox-optimization-markers-value="<%= @markers.to_json %>"
      data-mapbox-optimization-api-key-value="<%= ENV['MAPBOX_API_KEY_MATCHING'] %>">
    </div>
    <div class="info-box">
      <p>
        Draw your route using the draw tools on the right. To get the most
        accurate route match, draw points at regular intervals.
      </p>
      <%# <div id="directions"></div> %>
    </div>
  </div>
</div>
