<div class="parent-form container d-flex justify-content-center align-items-center h-100">
  <div class="wrapper form-design">
    <h2 class=form-font>Add a new location</h2>
      <%= simple_form_for(@location) do |f| %>
        <%= f.input :title %>
        <%= f.input :address,
                    input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                    wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] }}
        %>
        <%= f.input :description %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class: "btn__lemon_form" %>
      <% end %>
  </div>
</div>
