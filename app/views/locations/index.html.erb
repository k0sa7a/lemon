<h1>Locations</h1>

  <div class="search-form">
    <%= form_with url: locations_path, method: :get, class: "d-flex" do |form| %>
      <div data-controller="geoform" data-geoform-api-key-value= <%= ENV['MAPBOX_API_KEY'] %> >
        <%= form.text_field :query, value: params[:query], placeholder: "Postcode/Location", class: "d-none", data: {geoform_target: "address"} %>
      </div>
      <%= form.number_field :distance, in: 1.0..70.0, step: 0.5, placeholder: "Distance: 1km", value: params[:distance] %>
      <%= form.submit "Search" %>
    <% end %>
  </div>




<div class="index-content mx-1">
  <div>
    <% if params[:query] %>
      <div class="weather d-flex justify-content-center">
      <%= image_tag @weather_icon %>
      <div class="d-flex flex-column align-items-center">
        <p><%= "Temperature: #{@temp}Â°C" %></p>
        <p><%= "Wind speed: #{@wind}m/s" %></p>
      </div>
    </div>
    <% end %>
    <div class="locations-container" >
      <% empty = current_user.itineraries.empty? %>
      <% @locations.each do |location| %>
        <div data-controller="favorites">
          <p><%= render "show_modal", location: location, num: location.id, list_item: @list_item, itinerary: @itinerary, empty: empty %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="map-container" >
    <div style="width: 100%; height: 100%;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
