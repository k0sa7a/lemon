<!-- Button trigger modal -->

<a class="modal__link" data-bs-toggle="modal" data-bs-target="#locationModal<%= num %>"><%= location.title %></a>

<!-- Modal -->
<div class="modal fade" id="locationModal<%= num %>" tabindex="-1" aria-labelledby="locationModalLabel<%= num %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered"">
    <div class="modal-content border-killer">
      <div class="modal-header kill-padding">
        <!-- render carousel partial -->
        <%= render "show_carousel", location: location, num: location.id %>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div class="detail-container">
          <h2><%= location.title %></h2>
          <p><%= location.description %></p>
          <p><%= location.address %></p>
        </div>
      </div>

      <div class="modal-footer d-flex justify-content-between">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Place Holder</button>

        <button type="button" class="btn btn-secondary">Add to custom route</button>

        <%= simple_form_for([itinerary]) do |f| %>
          <%= f.input :title %>
          <%= f.submit "create itinerary", class: "btn btn-primary" %>
        <% end %>
        <%= simple_form_for([location, list_item]) do |f| %>
          <%= f.input :location_id %>
          <%= f.input :itinerary_id %>
          <%= f.submit "create list item", class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>
