<div class="container">
  <div class="row py-4">
    <div class="col-md-3"> <img src="<%= cl_image_path @appointment.coach.user.photo.key, crop: :fill %>"</div>
    <div class="col">
      <h1>Order #<%= @appointment.id %> <small><span class="badge bg-primary"><%= @appointment.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @appointment.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%= @appointment.coach.user.first_name %> [<%= @appointment.coach.id %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @appointment.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
